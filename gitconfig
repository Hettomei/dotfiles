[gui]
[user]
  name = Hettomei
  email = itsumo.sibyllin@gmail.com
[core]
  editor = nvim
  excludesfile = ~/.gitignore_global
[color]
  ui = auto
[color "diff"]
  meta = yellow
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  st = status
  br = branch -vv
  co = checkout
  c  = commit
  cm = commit -m
  ca = commit --amend
  di = diff
  dic = diff --cached
  diw = diff --color-words
  dicw = diff --cached --color-words
  l   = log     --abbrev-commit --pretty=format:'%Cred%h %Cgreen%ci %C(bold blue)%an%Creset%C(yellow)%d%Creset %s'
  ll  = log -5  --abbrev-commit --pretty=format:'%Cred%h %Cgreen%ci %C(bold blue)%an%Creset%C(yellow)%d%Creset %s'
  lll = log -15 --abbrev-commit --pretty=format:'%Cred%h %Cgreen%ci %C(bold blue)%an%Creset%C(yellow)%d%Creset %s'
  # Print current branch graph
  lg  = log     --abbrev-commit --pretty=format:'%Cred%h %Cgreen%ci %C(bold blue)%an%Creset%C(yellow)%d%Creset %s' --graph
  # Print all branch all graph
  lall = log --graph --decorate --pretty=oneline --abbrev-commit --all
  whatrebase = log upstream/master..HEAD --oneline --pretty=format:'%Cred%h %Cgreen%ci %C(bold blue)%an%Creset%C(yellow)%d%Creset %s' --abbrev-commit
  wc = whatchanged -p
  wcw = whatchanged -p --color-words
  ap = add -p
  # you can do this if you didn't push. commit is lost but all the changes return to "stagged for commit"
  undo-commit = reset --soft HEAD^
  rh = reset HEAD
  rhall = !git reset HEAD . && git status
  # edit config : open this file :)
  ec = config --global -e
  branchauthors = "! for branch in `git branch -r | grep -v HEAD`;do echo `git show --format=\"%ai %ar by %an\" $branch | head -n 1` \t$branch; done | sort -r"
[push]
  default = simple
[diff]
  algorithm = patience
  tool = nvim -d
[merge]
  tool = fugitive
[difftool]
  prompt = false
[pager]
  diff = diff-so-fancy | less --tabs=4 -RFX
  show = diff-so-fancy | less --tabs=4 -RFX
