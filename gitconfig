[gui]
[user]
  name = Hettomei
  email = itsumo.sibyllin@gmail.com
[core]
  editor = vim
  excludesfile = /Users/tim/.gitignore_global
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  st = status
  br = branch
  co = checkout
  l = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  l2 = log --graph --decorate --pretty=oneline --abbrev-commit --all
  l3 = log --graph --full-history --all --color --pretty=format:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s"
  wc = whatchanged -p
[push]
  default = simple
[diff]
  algorithm = patience
