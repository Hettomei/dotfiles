# ~/.bash_logout: executed by bash(1) when login shell exits.

# Ajout tim
printf -v TODAY '%(%Y-%m-%d)T' -1
# si je veux faire des stats precises
history >> "$HOME/history_stats/tim_histo_stats_${TODAY}.log"
history | awk '{for(i=4;i<=NF;++i) printf "%s ", $i; print ""}' | sort | uniq >> "$HOME/history_backups/tim_histo_${TODAY}.log"

# deja pr√©sent
# when leaving the console clear the screen to increase privacy

if [ "$SHLVL" = 1 ]; then
    [ -x /usr/bin/clear_console ] && /usr/bin/clear_console -q
fi
