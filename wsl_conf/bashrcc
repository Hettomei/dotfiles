  set -eu
  tmpfile=$(mktemp /tmp/XXXXXX)
  pbpaste > "$tmpfile"
  jq '.' "$tmpfile"
  jq '.' "$tmpfile" | pbcopy
  echo ""
  echo "dans le press papier"
}

