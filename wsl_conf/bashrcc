function meme {
  # imagemagick, thanks to https://github.com/ddrscott/convert_meme
  # meme input.jpg output.jpg "upper text" "bottom text"
  src=$1
  dest=$2
  header=$3
  footer=$4

  font=Impact

  width=$(identify -format %w "$src")
  ((caption_height=width/8))
  ((strokewidth=width/500))

  convert "$src"       \
    -background none   \
    -font ${font}      \
    -fill white        \
    -stroke black      \
    -strokewidth ${strokewidth}       \
    -size "$width"x"$caption_height"  \
    -gravity north caption:"${header}" -composite \
    -gravity south caption:"${footer}" -composite \
    "$dest"
}

function histosearch {
  (cd ~/history_backups;
  rg -M 240 --max-columns-preview --sort path "$@")
}

function rr {
  rg -M 240 --max-columns-preview --sort path --hidden --glob "!.git" "$@" -p | less -RXF
}


