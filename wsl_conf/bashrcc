function git_all() {
  # -> commentÃ© car ne change pas reellement de branche
  # find '.' -mindepth '1' -maxdepth '2' \
  #      -name '.git' -type 'd' \
  #      -execdir  bash -c "pwd && git $@" ';'

  find "." -mindepth 1 -maxdepth 2 -name '.git'  -type d  -print0 | while IFS= read -r -d '' folder; do
      echo $folder
      git -C "${folder%"/.git"}" $@
      # Utiliser & pour tout paralelliser ne semble pas une bonne idÃ©e car le terminal se comporte mal
  done
}

function exec_all() {
  find '.' -mindepth '1' -maxdepth '2' \
       -name '.git' -type 'd' \
       -execdir  bash -c "$*" ';'
}

alias gg=git_all
alias ee=exec_all

function ggg() {
  cd ..
  git_all $@
  cd -
}

function cwsl(){
  cd "$HOME/poly/code"
  goto_folder_quick "$@"
}

function c(){
  cd "$POLY_HOME/code"
  goto_folder_quick "$@"
}

function goto_folder_quick(){
  if [[ -z "$1" ]]; then
    cd "pgd"
    echo "pas de second parametre, dossier par defaut"
    return 0
  else
    base_path="${1}*" # car "*$1*" fait un expand de *
  fi

  all_matches=$(find '.' -mindepth '1' -maxdepth '1' -type 'd' -name "${base_path}")
  if [[ -z "$all_matches" ]]; then
    # On ajoute une *
    base_path="*${1}*" # car "*$1*" fait un expand de *
    all_matches=$(find '.' -mindepth '1' -maxdepth '1' -type 'd' -name "${base_path}")
    if [[ -z "$all_matches" ]]; then
      echo "rien trouvÃ© avec $base_path"
      return 0
    fi
  fi

  echo "$all_matches"
  cd $(echo "$all_matches" | head -1)

  if [[ -z "$2" ]]; then
    new_path='*'
  else
    new_path="*${2}*"
  fi

  echo "-"

  all_matches=$(find '.' -mindepth '1' -maxdepth '1' -type 'd' -name "$new_path")
  echo "$all_matches"

  if [[ -z "$all_matches" ]]; then
    echo "rien trouvÃ© avec $new_path"
    return 0
  fi

  # nÃ©cessaire quand on veut seulement aller dans le dossier parent
  # et pour pas qu il fasse entrer dans intellij
  if [[ -z "$2" ]]; then
    return 0
  fi

  cd $(echo "$all_matches" | head -1)
}

