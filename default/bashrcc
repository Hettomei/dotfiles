copyfromroottodoc() {
  # you must be in doc repo
  a=$(pwd)
  current_name=${a:56}
  echo will copy ../../$current_name
  cp -v ../../$current_name/documentation/* ./documentation/
  cp -v ../../$current_name/implementation* ./
  git status
}

copyfromroottotesi() {
  # you must be in tesi repo
  a=$(pwd)
  current_name=${a:47}
  echo will copy ../../$current_name
  cp -v ../../$current_name/script_ops/* ./
  git status
}

